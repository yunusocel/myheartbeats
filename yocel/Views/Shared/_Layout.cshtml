<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - yocel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="images/logo.png" />


    <style>

        .container {
            position: relative !important;
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
            min-width: 100% !important;
            height: auto !important;
        }

        .p {
            font-family: fantasy !important;
        }

        p {
            line-height: 2;
        }

        .hr-style {
            position: relative;
            margin-top: 50px;
            margin-bottom: 50px;
            border-style: dotted none none;
            border-width: 5px;
            border-color: #E5E7E9;
            width: 4%;
        }

        .contact-img {
            width: 50px;
            height: 50px;
            border-radius: 100%;
        }

        .contact-me {
            position: relative;
            width: 100%;
            height: auto;
            margin-bottom: 50px;
            margin-top: 0;
            text-align:center;
        }

        .btn-primary {
            background: #11cdd4;
            background-image: -webkit-linear-gradient(top, #11cdd4, #11999e);
            background-image: -moz-linear-gradient(top, #11cdd4, #11999e);
            background-image: -ms-linear-gradient(top, #11cdd4, #11999e);
            background-image: -o-linear-gradient(top, #11cdd4, #11999e);
            background-image: linear-gradient(to bottom, #11cdd4, #11999e);
            -webkit-border-radius: 8;
            -moz-border-radius: 8;
            border-radius: 8px;
            font-family: Arial;
            color: #ffffff;
            font-size: 20px;
            padding: 10px 20px 10px 20px;
            text-decoration: none;
        }

            .btn-primary:hover {
                background: #30e3cb;
                background-image: -webkit-linear-gradient(top, #30e3cb, #2bc4ad);
                background-image: -moz-linear-gradient(top, #30e3cb, #2bc4ad);
                background-image: -ms-linear-gradient(top, #30e3cb, #2bc4ad);
                background-image: -o-linear-gradient(top, #30e3cb, #2bc4ad);
                background-image: linear-gradient(to bottom, #30e3cb, #2bc4ad);
                color: white;
                text-decoration: none;
            }




        ul.navbar-nav a:hover {
            color: #48C9B0 !important;
        }

        .footer {
            clear: both;
            position: relative !important;
            background-color: #66BFBF;
            margin-top: 120px;
            margin-bottom: 0;
            height: auto;
            width: 100%;
        }

        .footer-link {
            font-family: 'Montserrat',sans-serif;
            margin-left: 10px;
            margin-right: 10px;
        }

            .footer-link:visited {
                color: #11999e;
            }

            .footer-link:active {
                color: #566573;
            }

            .footer-link:hover {
                color: #EAF6F6;
            }

        .dropdown-item:hover {
            color: #66BFBF;
        }


        .navbar-dark {
            background: black !important;
        }


        .goog-te-gadget-icon {
            display: none !important;
        }

        #google_translate_element div.goog-te-gadget-simple {
        }

        #google_translate_element div.goog-te-gadget-simple {
            background-color: black;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
            font-size: 1rem;
            font-weight: 400;
        }

            #google_translate_element div.goog-te-gadget-simple a.goog-te-menu-value span {
                color: rgba(255, 255, 255,.5);
       
            }

                #google_translate_element div.goog-te-gadget-simple a.goog-te-menu-value span:hover {
                    color: #48C9B0;
                }

        #google_translate_element div.goog-te-gadget-simple {
            border: none;
        }

        #home {
            color: rgba(255, 255, 255,.5);
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark" style="height:5%; color:black">
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" id="home" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        My Heart Beats in...
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Madrid, Spain</a>
                        <a class="dropdown-item" href="#">London, UK</a>
                        <a class="dropdown-item" href="https://localhost:5001/Home/Athens.cshtml">Athens, Greece</a>
                        <a class="dropdown-item" href="#">Thessaloniki, Greece</a>
                        <a class="dropdown-item" href="#">Nafplio, Greece</a>
                        <a class="dropdown-item" href="#">Santorini, Greece</a>
                        <a class="dropdown-item" href="#">Rome, Italy</a>
                        <a class="dropdown-item" href="#">Barcelona, Spain</a>
                        <a class="dropdown-item" href="#">Paris, France</a>
                        <a class="dropdown-item" href="#">Brussels, Belgium</a>
                        <a class="dropdown-item" href="#">Amsterdam, Netherlands</a>
                        <a class="dropdown-item" href="#">Baku, Azerbaijan</a>
                    </div>

                <li class="nav-item">
                    <a class="nav-link" id="contact" href="#get-in-touch">Contact me</a>
                </li>
            </ul>
            <div id="google_translate_element"></div>
            <script type="text/javascript">// <![CDATA[
                function googleTranslateElementInit() {
                    new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
                }
                                                                      // ]]></script>
            <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit" type="text/javascript"></script>
        </div>
    </nav>


</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <hr class="hr-style">
    <div class="contact-me">
        <h2>Get In Touch</h2>
        <h3 style="padding-top:2rem">If you love travelling by heart as much as i do...</h3>
        <p>I'd like to meet you and make a plan together.</p>
        <p>Let's take a dive into new adventures!</p>
        <br>
        <br>
        <br>
        <a class="btn-primary" id="get-in-touch" href="mailto:yunusocel.45@gmail.com">CONTACT ME</a>
    </div>




    <footer class="border-top footer text-muted">
        <table width="10%" cellspacing="0px" cellpadding="5px" style="margin-left:auto; margin-right:auto; margin-top:3%">
            <tr>
                <td width="0%">
                    <img class="contact-img" src="images/general/instagram.png" alt="instagram-img">
                </td>
                <td width="0.5%">
                    <a class="footer-link" id="insta-id" href="https://www.instagram.com/sunuyleco/">Instagram</a>
                </td>
                <td width="0%">
                    <img class="contact-img" src="images/general/linkedin.png" alt="linkedin-img">
                </td>
                <td width="0.5%">
                    <a class="footer-link" id="linkedin-id" href="https://www.linkedin.com/in/yunus%C3%B6cel/">LinkedIn</a>
                </td>
                <td width="0%">
                    <img class="contact-img" src="images/general/facebook.png" alt="fb-img">
                </td>
                <td width="0.5%">
                    <a class="footer-link" style="font-family: 'Montserrat'" id="fb-id" href="https://www.facebook.com/yunus.ocel">Facebook</a>
                </td>
            </tr>
        </table>
        <hr style="margin-top: 50px; margin-bottom: 10px; padding: 0; color: rgba(255, 255, 255,.5)" />
        <div class="container-footer" style="margin-bottom: 0px; padding: 10px; font-size: smaller; text-align: center; font-family: 'Montserrat',sans-serif; color: white; margin-top: 0%">
            <p style="margin-top:0; margin-bottom:0; padding:0; font-size:smaller">
                Not allowed to use any photographs published on this website at different platforms.
                <br />
                All rights reserved.
            </p>
            &copy; @DateTime.Now.Year - Yunus Öcel - <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
